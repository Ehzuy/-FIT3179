{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 900,
  "height": 500,
  "layer": [
    {
      "data": {
        "url": "data/world-110m.json",
        "format": {
          "type": "topojson",
          "feature": "countries"
        }
      },
      "projection": {
        "type": "mercator",
        "scale":110
      },
      "selection": {
        "CylYr": {
          "type": "single", "fields": [ "year"],
          "init": { "year": 0},
          "bind": {
            "year": {"input": "range", "min": -4000, "max": 2000, "step": 1}
          }
        }
    },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    
    {
      "data": {
        "url": "https://Ehzuy.github.io/-FIT3179/database.csv"
      },
      "projection": {
        "type": "mercator",
        "scale":110
      },
      
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {"value": 30},
        "color": {
          "value": "grey",
          "condition": {"selection": "CylYr", "field": "country", "type": "nominal"}
          }
        
      }
    }
  ]
}
