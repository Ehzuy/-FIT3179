{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://Ehzuy.github.io/-FIT3179/database.csv"
  },
  "width":700,
  "height":300,
  "mark": "line",
  "selection": {
    "gender_select":{
      "type":"single",
      "fields":["sex"],
      "bind":"legend"
    }
  },
  "encoding": {
    "x": {
      "field": "birth_year",
      "type": "quantitative",
      "title":"year"
    },
    "y": {
      "aggregate": "count"

    },
    "opacity": {
      "condition":{"selection":"gender_select","value":1.0},
      "value": 0.2
 },
    "color": {
      "type": "nominal",
      "field": "sex", 
      "legend": {
        "orient": "right"
      }
    }
  },
  "config": {}
}
